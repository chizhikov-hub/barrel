// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model ProductFolder {
  id       Int             @id @default(autoincrement())
  name     String
  parentId Int? // Null для корневых папок
  parent   ProductFolder?  @relation("FolderTree", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children ProductFolder[] @relation("FolderTree")
  products Product[]
  path     String // Полный путь папки для удобной навигации

  @@map("ProductFolders")
}

model Product {
  id            Int           @id @default(autoincrement())
  name          String
  favorite      Boolean       @default(false)
  productType   ProductType   @relation(fields: [productTypeId], references: [id])
  productTypeId Int
  folder        ProductFolder @relation(fields: [folderId], references: [id])
  folderId      Int

  @@map("Products")
}

model ProductType {
  id       Int       @id @default(autoincrement())
  name     String
  unit     Unit      @relation(fields: [unitId], references: [id])
  unitId   Int
  products Product[]

  @@map("ProductTypes")
}

model Unit {
  id           Int           @id @default(autoincrement())
  code         String        @unique
  name         String
  productTypes ProductType[]

  @@map("Units")
}
